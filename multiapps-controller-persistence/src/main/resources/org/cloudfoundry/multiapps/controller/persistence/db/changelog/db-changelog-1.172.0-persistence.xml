<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="sap.com" id="add_columns_to_process_log">
        <preConditions>
            <tableExists tableName="process_log"/>
        </preConditions>
        <addColumn tableName="process_log">
            <column name="operation_log_name" type="VARCHAR(255)"/>
        </addColumn>
        <addColumn tableName="process_log">
            <column name="id" type="VARCHAR(255)"/>
        </addColumn>
        <sql>
            ALTER TABLE process_log ALTER COLUMN id DROP NOT NULL;
        </sql>
        <dropPrimaryKey tableName="process_log"/>
        <addColumn tableName="process_log">
            <column name="operation_log" type="VARCHAR"/>
        </addColumn>
        <sql>
            ALTER TABLE process_log ALTER COLUMN file_id DROP NOT NULL;
        </sql>
        <sql>
            ALTER TABLE process_log ALTER COLUMN content DROP NOT NULL;
        </sql>
        <sql>
            ALTER TABLE process_log ALTER COLUMN content_bytea DROP NOT NULL;
        </sql>
        <sql>
            ALTER TABLE process_log ALTER COLUMN digest DROP NOT NULL;
        </sql>
        <sql>
            ALTER TABLE process_log ALTER COLUMN digest_algorithm DROP NOT NULL;
        </sql>
        <sql>
            ALTER TABLE process_log ALTER COLUMN file_name DROP NOT NULL;
        </sql>
    </changeSet>
</databaseChangeLog>
